{
  "app": {
    "id": "com.lemurexpress11.pizza",
    "name": "Lemur Express 11",
    "version": "1.0.0",
    "versionCode": 1
  },
  "features": {
    "customer": {
      "pizzaOrdering": true,
      "realTimeTracking": true,
      "customization": true,
      "payment": true,
      "orderHistory": true
    },
    "employee": {
      "orderManagement": true,
      "statusUpdates": true,
      "timeControl": true,
      "substitutions": true,
      "cancellations": true,
      "paymentProcessing": true,
      "notifications": true,
      "dashboard": true
    }
  },
  "authentication": {
    "employee": {
      "username": "admin",
      "password": "1234",
      "sessionTimeout": 3600000
    },
    "firebase": {
      "enabled": true,
      "realTimeSync": true
    }
  },
  "ui": {
    "theme": "pizza",
    "primaryColor": "#ff6b35",
    "accentColor": "#ffa726",
    "touchOptimized": true,
    "hapticFeedback": true
  },
  "performance": {
    "autoRefresh": 5000,
    "offlineSupport": true,
    "backgroundSync": true,
    "pushNotifications": true
  }
}